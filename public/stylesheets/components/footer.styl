    .supplement
      col(12)
      margin 25px 0
      flexbox()
      justify-content(center)
      flex-wrap nowrap


      @media $tablet
        col(6)
        justify-content(flex-end)
      
      & > li
        color $faint-grey
        margin-right 20px
        
        &:last-child
          margin-right 0
      
    a
      text-decoration none
      color $faint-grey
      
    a:hover
      color $white
      
    .copyright
      display block
      white-space nowrap