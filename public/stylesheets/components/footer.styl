footer
  background-block()
  background $light-black
  padding 55px 0
  
  & > .content-block
    content-block()

    .core-footer
      col(12)
      flexbox()
      justify-content(center)
      align-items(center)
      
      .logo
        flex-grow 1
        // 
        & > a
          display block
          height 25px
          min-width 150px
          background-image url(../images/anybeast-logo@2x.png)
          background-repeat no-repeat
          background-position center
          background-size contain
      
      .link-list
        flex-grow 2
        flexbox()
        justify-content(flex-start)
        
        & > li
          margin-right 25px
          &:first-child
            margin-left 20px
          &:last-child
            margin-right 0
          
      .supplement
        flex-grow 1
        flexbox()
        justify-content(flex-end)
        text-align right

        & > li
          color $faint-grey
          margin-right 20px
          
          &:last-child
            margin-right 0
      
    a
      text-decoration none
      color $faint-grey
      
    a:hover
      color $white
      
    .copyright
      display block
      white-space nowrap