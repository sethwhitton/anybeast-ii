footer
  background-block()
  background $light-black
  padding 35px 0
  
  & > .content-block
    content-block()
    justify-content(space-around)
    align-items(center)
    
    .logo
      
      @media $tablet
        col(2)
        
      @media $desktop
        col(2)

      & > a
        display block
        height 25px
        min-width 150px
        background-image url(../images/anybeast-logo@2x.png)
        background-repeat no-repeat
        background-position center
        background-size contain
        
