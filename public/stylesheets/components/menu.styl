aside 
  position fixed
  width 100%
  height 100%
  top 0
  left 0
  background $blue
  transition all .5s ease
  z-index 3
  opacity 0
  visibility hidden
  
.open
  opacity .99
  visibility visible
  
nav
  text-align center
  height 65vh
  flexbox()
  flex-direction column
  justify-content(center)
  
  @media $tablet
    height 70vh
  
  & > ul
    margin 0
    padding 0
    list-style none
    
    & > li
      align-items(center)
      flex 1
      line-height 9vh
      
      @media $tablet
        line-height 10vh
      
      a
        font-size 40px
        transition all 0.5s ease
        display background-block
        text-decoration none
        color $white
          
        &:hover
          transform scale(1.1)
          
          &:before
            visibility visible
            transform scaleX(1)
            
        @media $tablet
          font-size 60px        
.outer-close
  position absolute
  right 0
  top 0
  width 85px
  height 85px
  cursor pointer
  
// Anybeast icon state when open

.blue
  background-image url(../images/anybeast_icon_blue@2x.png) !important
  position relative
  
  &:after
    content 'ANYBEAST'
    font-size 12px
    letter-spacing 2px
    color $dark-blue
    text-transform uppercase
    text-decoration none
    position absolute
    bottom -26px
    margin-left -27px