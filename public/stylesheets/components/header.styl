nav.global-nav
  
  ul
    flexbox()
    justify-content(center)
    width 50%
    margin 75px auto 125px auto
    
    li
      margin 0 5%
      text-transform uppercase
      font-size 13px
      letter-spacing 1.5px
        
      @media $tablet
        margin 0 3%
      
      a
        text-decoration none
        color $silver
        transition all 0.5s ease
        
        &:active
          cursor pointer
        
        &:hover
          transform scale(1.1)
          color $white

.anybeast-logo
  width 100%
  height 55px
  margin 75px auto 125px auto
  position relative
  display block
  text-align center
  
  @media $phone
    height 45px

  &:after 
    content 'ANYBEAST'
    font-size 12px
    letter-spacing 2px
    color $silver
    text-transform uppercase
    text-decoration none
    position absolute
    bottom -26px
    margin-left -36px
    
    @media $phone
      letter-spacing 1.5px
      bottom -23px
          
  & > a
    display block
    width 63px
    height 55px
    padding 20px
    margin 0 auto
    background-image url(../images/anybeast_icon@2x.png)
    background-repeat no-repeat
    background-position center
    background-size contain
    cursor pointer    
    
    @media $phone
      height 45px

.case-study-header
  margin 55px auto 75px auto
  
  @media $phone
    margin 25px auto 50px auto
  
.arrow-back
  display block
  position absolute
  margin-left 65px  
  min-width 75px
  min-height 75px
  background url('../images/arrow-head-right.svg')
  background-repeat no-repeat
  background-position center
  rotator()
  
  @media $phone
    margin-left 15px
  
  &:hover
    cursor pointer
  
.balancer
    display inline-block
    // margin-left 50px
    min-width 28px
    min-height 16px