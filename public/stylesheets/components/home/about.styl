#home-about
  background-block()
  background $black
  
  & > .content-block
    padding 135px 0 120px 0

    & > div
      col(10,1)
      
      @media $tablet
        col(8,1)
      
      h2
        font-size 48px
        line-height 1.25em
        margin-bottom 50px
        z-index 2
        position relative
        transition all 0.5s ease
        
        @media $tablet
          font-size 48px
        
        @media $desktop
          font-size 56px

      h3
        color $gold
        text-transform uppercase
        font-size 15px
        margin-bottom 50px
        z-index 2
              
        @media $tablet
          font-size 15px

        @media $desktop
          font-size 15px
        
    .arrow-right
      flexbox()
      justify-content(flex-start)

      & > a
        display block
        min-width 28px
        min-height 16px
        background url('../images/arrow-head-right.svg')
        background-repeat no-repeat
        background-size contain
        background-position center
