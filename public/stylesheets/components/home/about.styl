#home-about, #home-contact
  background-block()
  
  & > .content-block
    content-block(flex-start, flex-start, center)
    height 100vh
    
    div 
      col(10,1)
      @media $tablet
        col(10,1)
      @media $desktop
        col(9,1)
            
    h2
      text-align center
      text-transform uppercase
      color $gold
      font-size 14px
      margin-bottom 35px
      letter-spacing 1px
      
      @media $tablet
        text-align left
      
    h1
      text-align center
      font-size 32px
      line-height 1.6em
      margin-bottom 25px
      
      @media $tablet
        text-align left
        font-size 40px
        line-height 1.4em
        
      @media $desktop
        font-size 44px
        line-height 1.5em   

    p
      text-align center
      font-size 20px
      line-height 32px
      color $silver
      
      @media $tablet
        text-align left

    
